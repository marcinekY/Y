<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:tplS='urn:import:pl.cms.tpllib.client.sections'>
	<ui:style>
		.panel {
			width: 100%;
			height: 800px;
			background-color: ivory;
			z-index: -11;
		}
	</ui:style>

	<g:HTMLPanel styleName="{style.panel}" ui:field="panel">
		<g:HTMLPanel styleName="Y-system-SectionsControlTree">
			<g:FlowPanel ui:field="controlPanel" height="20px" width="100%">
				<g:Button width="20px" height="20px" ui:field="buttonAddSection">+</g:Button>
				<g:Button width="20px" height="20px" ui:field="buttonRemoveSection">-</g:Button>
			</g:FlowPanel>
			<tplS:SectionsTreeView ui:field="sectionsTree" />
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="sectionsWidgetPanel" styleName="Y-system-SectionsPalette" />
		<tplS:SectionsView2 ui:field="sectionsPanel" />
		
	</g:HTMLPanel>

